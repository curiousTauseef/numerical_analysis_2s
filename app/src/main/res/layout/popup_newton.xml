<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helpColor"
    tools:background="@color/helpColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="506dp"
                android:drawableBottom="@drawable/newton_1"
                android:drawableTop="@drawable/newton_2"
                android:gravity="center_horizontal"
                android:text="This method requires the user enter an x vaue, number of iterations and tolerance, also this method requires a function f and f' (optionally). The execution of the program consist in found the value of x that makes x = x - f/f' and then remplace in f(x) to make f(x) = 0"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="12dp"
                tools:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

