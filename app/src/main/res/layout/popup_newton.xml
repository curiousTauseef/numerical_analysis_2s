<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helpColor"
    tools:background="@color/helpColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:gravity="center_horizontal"
                android:text="This method is a variant of the fixed point method. The succession of values xn is obtained by the following iterative equation: "
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="12dp"
                tools:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:drawableTop="@drawable/newton_1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="12dp"
                tools:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="292dp"
                android:drawableBottom="@drawable/newton_2"
                android:gravity="center_horizontal"
                android:text="As the graph shows, the method approaches the root through tangents. \n\n Note: The method does not always converge and under appropriate conditions, presents quadratic convergence."
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="12dp"
                tools:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>