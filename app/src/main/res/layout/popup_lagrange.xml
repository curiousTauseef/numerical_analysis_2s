<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helpColor"
    tools:background="@color/helpColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="191dp"
            android:drawableBottom="@drawable/lagrange"
            android:gravity="center_horizontal"
            android:text="The Lagrange method interpolant computes a polynomial P such that it has a degree almost n if the input points are n+1. Moreover, the input points must belong to the polynomial P."
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="28dp"
            tools:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center_horizontal"
            android:text="Each Li(X)*f(Xi) is a polynomial such that Li(Xi) = 1 and Li(Xj) = 0 for j != 1."
            android:textColor="@android:color/white"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="28dp"
            tools:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView46"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>