<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:ems="4"
    android:orientation="vertical"
    tools:context="com.example.sacrew.numericov4.fragments.systemEquationsFragment.inverseDeterminant">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:drawableLeft="@drawable/ic_previous"
        android:drawableRight="@drawable/ic_next"
        android:gravity="center"
        android:text="Inverse Matrix and Determinant"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/croultButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="crout"
            android:textColor="@android:color/white"
            android:theme="@style/colorButtonPrimary" />

        <Button
            android:id="@+id/doolittleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="doolittle" />

        <Button
            android:id="@+id/choleskyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="cholesky"
            android:textColor="@android:color/white"
            android:theme="@style/colorButtonPrimary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center|left|top">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <HorizontalScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                    <TableLayout
                        android:id="@+id/matrixResult"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
            </ScrollView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/determinant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="D(A) = "
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
