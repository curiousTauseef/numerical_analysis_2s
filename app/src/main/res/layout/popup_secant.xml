<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/helpColor"
    tools:background="@color/helpColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="444dp"
                android:drawableBottom="@drawable/secant_1"
                android:drawableTop="@drawable/secant_2"
                android:gravity="center_horizontal"
                android:text="This method uses a difference instead of a derivative to approximate the slope. It requires 2 initial values and is one of the most used. Unlike Newton's method, this method calculates the following value of X differently, approaching the root through secants, instead of tangents."
                android:textColor="@android:color/white"
                android:textSize="19sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="16dp"
                tools:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>